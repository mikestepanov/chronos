{
  "name": "chronos",
  "version": "1.0.0",
  "description": "Bot implementations for timesheet monitoring and messaging integrations",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikestepanov/chronos.git"
  },
  "main": "server.js",
  "packageManager": "pnpm@9.1.1",
  "scripts": {
    "start": "node koyeb-cron-server.js",
    "start:api": "node server.js",
    "dev": "nodemon server.js",
    "deploy": "node koyeb/deploy.js",
    "test:cron": "node scripts/test-cron.js",
    "check": "node scripts/kimai-timesheet-bot.js check",
    "remind": "node scripts/kimai-timesheet-bot.js remind",
    "monday": "node monday-reminder/monday-reminder.js send",
    "monday:test": "node monday-reminder/monday-reminder.js test",
    "monday:preview": "node monday-reminder/monday-reminder.js preview",
    "monday:schedule": "node monday-reminder/monday-reminder.js schedule",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/",
    "test:integration": "jest --testPathPattern=integration",
    "test:pay-period": "jest tests/pay-period-calculator.test.js",
    "test:monday": "jest tests/monday-reminder.test.js",
    "test:resilient": "jest tests/resilient-sender.test.js",
    "test:security": "jest tests/pumble-client-security.test.js tests/storage-layer.test.js tests/webhook-handler.test.js",
    "test:kimai": "jest tests/kimai-client.test.js",
    "test:storage": "jest tests/storage-layer.test.js",
    "test:webhook": "jest tests/webhook-handler.test.js",
    "test:flow": "jest tests/integration-flow.test.js",
    "test:critical": "jest tests/kimai-client.test.js tests/pumble-client-security.test.js tests/storage-layer.test.js tests/webhook-handler.test.js tests/integration-flow.test.js",
    "kimai:extract": "node kimai/cli.js extract",
    "kimai:status": "node kimai/cli.js status",
    "kimai:scheduler": "node kimai/scheduler.js",
    "kimai:test": "npm run kimai:test:mock && npm run kimai:test:integration && npm run kimai:test:load",
    "kimai:test:mock": "KIMAI_MOCK=true NODE_ENV=test node kimai/tests/mock-test.js",
    "kimai:test:integration": "NODE_ENV=test node kimai/tests/integration-test.js",
    "kimai:test:load": "node kimai/tests/load-test-concurrent.js 10 && node kimai/tests/load-test-concurrent.js 50 && node kimai/tests/load-test-concurrent.js 100",
    "kimai:test:quick": "npm run kimai:test:mock && KIMAI_MOCK=true NODE_ENV=test node kimai/tests/test-pipeline.js",
    "pull-kimai": "node scripts/pull-kimai.js",
    "send-reminder": "node scripts/send-timesheet-reminder.js",
    "send-reminder:dev": "node scripts/send-timesheet-reminder.js -c dev",
    "send-reminder:design": "node scripts/send-timesheet-reminder.js -c design",
    "send-reminder:bot-testing": "node scripts/send-timesheet-reminder.js -c bot-testing",
    "send-reminder:random": "node scripts/send-timesheet-reminder.js -c random",
    "send-reminder:preview": "node scripts/send-timesheet-reminder.js -d",
    "send-compliance": "node scripts/send-compliance-status.js",
    "send-compliance:preview": "node scripts/send-compliance-status.js -d"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "commander": "^14.0.0",
    "csv-parse": "^5.5.0",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "enquirer": "^2.4.1",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "playwright": "^1.54.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/node": "^20.10.0",
    "glob": "^11.0.3",
    "jest": "^29.7.0"
  }
}
